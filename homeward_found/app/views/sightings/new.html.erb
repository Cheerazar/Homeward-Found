<div class="container">
<h3>Sighting</h3>
<%= form_for @sighting, {action: "create"} do |f| %>
<%= f.label :type, "Animal type:" %>
<%= f.select :type, options_for_select([["Cat", "cat"], ["Dog", "dog"]]) %>
<br>
<%= f.label :size, "Size:" %>
<%= f.select :size, options_for_select([["Small", "small"], ["Medium", "medium"], ["Large", "large"]]) %>
<br>
<%= f.label :coat_type, "Coat type:" %>
<%= f.text_field :coat_type %>
<br>
<%= f.label :coat_length, "Coat length:" %>
<%= f.select :coat_length, options_for_select([["Long", "long"], ["Medium", "medium"], ["Short", "short"], ["Hairless", "hairless"]]) %>
<br>
<%= f.label :breed, "Breed:" %>
<%= f.select :breed, options_for_select([["still working on it"]]) %>
<br>
<%= f.label :location, "Last location:" %>
<%= f.text_field :location %>
<br>
<%= f.label :tag, "Tag:" %>
<%= f.text_field :tag %>
<br>
<%= f.label :detail, "Details:" %>
<%= f.text_area :detail %>
<br>
<%= f.label :date_seen, "Date seen:" %>
<%= f.date_select :date_seen %>
<br>
<%= f.label :found, "In my possession:" %>
<%= f.check_box :found, checked: false %>
<br><br>
<%= f.submit %>
<% end %>

</div>